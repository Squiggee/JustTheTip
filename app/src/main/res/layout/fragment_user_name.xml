<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary5">
    <!-- Here is the page that you will arrive at after choosing user name option from settings page
        copy the user name so that the app becomes more personable-->

    <TextView
        android:text="User Name"
        android:textSize="16pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView2"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="350dp"
        android:layout_height="18pt"
        android:inputType="textPersonName"
        android:background="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:id="@+id/editText2" />

    <TextView
        android:text="Male"
        android:textSize="16pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Female"
        android:textSize="16pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:id="@+id/textView4" />

    <RadioButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/radioButton"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignLeft="@+id/textView3" />

    <RadioButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:id="@+id/radioButton2"
        android:layout_marginLeft="40dp"
        />


</RelativeLayout>